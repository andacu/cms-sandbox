        "rz/formatter-bundle":  "~1.0",
        "rz/admin-bundle":  "~1.0",
        "rz/block-bundle":  "~1.0",
        "rz/user-bundle":  "~1.0",
        "rz/page-bundle":  "~1.0",
        "rz/media-bundle":  "~1.0",
        "rz/news-bundle":  "~1.0",
