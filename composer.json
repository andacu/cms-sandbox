{
    "name": "rz/sandbox",
    "description": "rz sandbox",
    "autoload": {
        "psr-0":         {
            "": "src/"
        }
    },
    "require": {
        "php": ">=5.3.3",

        "twig/twig": "1.12.*",
        "twig/extensions": "1.0.*@dev",

        "symfony/symfony": "2.3.*",
        "symfony/assetic-bundle": "2.3.*",
        "symfony/swiftmailer-bundle": "2.3.*",
        "symfony/monolog-bundle": "2.3.*",

        "sensio/distribution-bundle": "2.3.*",
        "sensio/framework-extra-bundle": "2.3.*",
        "sensio/generator-bundle": "2.3.*",

        "doctrine/orm": ">=2.2.3,<2.4-dev@stable",
        "doctrine/doctrine-bundle": "1.2.*",
        "doctrine/doctrine-migrations-bundle": "dev-master",
        "doctrine/migrations": "dev-master",
        "doctrine/doctrine-fixtures-bundle": "2.1.*@dev",
        "doctrine/data-fixtures": "dev-master",

        "jms/security-extra-bundle": "1.4.*",
        "jms/di-extra-bundle": "1.3.*",
        "jms/serializer-bundle": "0.12.*",

        "symfony-cmf/routing-bundle": "1.1.*@dev",

        "knplabs/gaufrette": "0.2.*@dev",
        "knplabs/knp-menu-bundle": "2.0.*@dev",
        "knplabs/knp-markdown-bundle": "1.2.*@dev",

        "sonata-project/easy-extends-bundle": "2.1.*@dev",
        "sonata-project/seo-bundle": "1.*@dev",
        "sonata-project/doctrine-extensions": "1.*",
        "sonata-project/intl-bundle": "2.2.*@dev",
        "sonata-project/cache-bundle": "2.1.*@dev",

        "rmzamora/notification-bundle": "2.2.*@dev",
        "rmzamora/admin-bundle": "2.2.*@dev",
        "rmzamora/block-bundle": "2.2.*@dev",
        "rmzamora/user-bundle": "2.2.*@dev",
        "rmzamora/media-bundle": "2.2.*@dev",
        "rmzamora/doctrine-orm-admin-bundle": "2.2.*@dev",
        "rmzamora/jquery-bundle": "1.9.*@dev",
        "rmzamora/bootstrap-bundle": "2.3.*@dev",

        "rmzamora/news-bundle": "2.3.*@dev",
        "rmzamora/formatter-bundle": "2.3.*@dev",
        "rmzamora/page-bundle": "2.3.*@dev",

        "rmzamora/entity-audit-bundle": "0.*@dev",

        "kriswallsmith/buzz": "0.7.*",

        "liip/imagine-bundle": "0.9.*@stable",
        "liip/monitor-bundle": "0.5.*",

        "dflydev/markdown": "1.0.2",
        "willdurand/faker-bundle": "dev-master",
        "videlalvaro/php-amqplib"  : "dev-master",
        "jms/command-bundle": "dev-master"
    },

    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*",
        "behat/behat": "2.4.*",
        "guzzle/guzzle": "3.0.*"
    },

    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ]
    },

    "config": {
        "bin-dir": "bin"
    },

    "minimum-stability": "dev",

    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "branch-alias": {
            "dev-2.2": "2.2.x-dev",
            "dev-master": "2.3.x-dev"
        }
    }
}
